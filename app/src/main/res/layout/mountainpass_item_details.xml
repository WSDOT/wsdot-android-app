<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/publisherAdView">
        	
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="vertical"
    	    android:padding="14dp">
    	
    		<TextView
    		    android:id="@+id/date_updated"
    		    android:textSize="@dimen/text_size_medium"
                android:textColor="@color/semi_black"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:paddingBottom="15dp"
    		    />    
    	    	
    		<TextView
    		    android:id="@+id/weather_condition_title"
    		    android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    />    
    	
    		<TextView
    	    	android:id="@+id/weather_condition_text"
    	    	android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    	    	android:layout_width="match_parent"
    	    	android:layout_height="wrap_content"
    	    	android:paddingBottom="10dp"
    	    	/>
    	
    		<TableLayout 
    		    android:layout_height="wrap_content" 
    		    android:layout_width="match_parent">
    	
    		    <TableRow> 
    				<TextView
    				    android:id="@+id/temperature_title"
    				    android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
    				    android:width="115dp"
    				    android:paddingBottom="10dp"
    				    />
    				<TextView
    				    android:id="@+id/temperature_text"
    				    android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
    				    android:layout_width="match_parent"
    				    android:paddingBottom="10dp"
    				    />
    		    </TableRow>
    		    <TableRow>
    				<TextView
    				    android:id="@+id/elevation_title"
    				    android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
    				    android:width="115dp"
    				    android:paddingBottom="10dp"
    				    />    
    			
    				<TextView
    				    android:id="@+id/elevation_text"
    				    android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
    				    android:layout_width="match_parent"
    				    android:paddingBottom="10dp"
    				    />	    
    		    </TableRow>
    	
    	    </TableLayout>
    	
    		<TextView
    		    android:id="@+id/road_condition_title"
    		    android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    />    
    	
    		<TextView
    	    	android:id="@+id/road_condition_text"
    	    	android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    	    	android:layout_width="match_parent"
    	    	android:layout_height="wrap_content"
    	    	android:paddingBottom="10dp"
    	    	/>
    	    
    		<TextView
    		    android:id="@+id/restriction_one_title"
    		    android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    />    
    	
    		<TextView
    	    	android:id="@+id/restriction_one_text"
    	    	android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    	    	android:layout_width="match_parent"
    	    	android:layout_height="wrap_content"
    	    	android:paddingBottom="10dp"
    	    	/>	  
    	
    		<TextView
    		    android:id="@+id/restriction_two_title"
    		    android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    />    
    	
    		<TextView
    	    	android:id="@+id/restriction_two_text"
    	    	android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
    	    	android:layout_width="match_parent"
    	    	android:layout_height="wrap_content"
    	    	android:paddingBottom="10dp"
    	    	/>
    	
    	</LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.doubleclick.PublisherAdView
        android:id="@+id/publisherAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@+string/banner_ad_unit_id" />

</RelativeLayout>